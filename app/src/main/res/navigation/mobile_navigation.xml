<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_chats">

    <fragment
        android:id="@+id/nav_chats"
        android:name="com.example.helpbuy.ui.chat.ChatFragment"
        android:label="My Chats"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/nav_transactions"
        android:name="com.example.helpbuy.ui.transactions.TransactionsFragment"
        android:label="My Transactions"
        tools:layout="@layout/fragment_transactions" />

    <fragment
        android:id="@+id/nav_addrequest"
        android:name="com.example.helpbuy.ui.addrequest.AddRequestFragment"
        android:label="Add Job Request"
        tools:layout="@layout/fragment_addrequest" />

    <fragment
        android:id="@+id/nav_addoffer"
        android:name="com.example.helpbuy.ui.addoffer.AddOfferFragment"
        android:label="Add Job Offer"
        tools:layout="@layout/fragment_addoffer" />

    <fragment
        android:id="@+id/nav_listrequest"
        android:name="com.example.helpbuy.ui.listrequest.ListRequestFragment"
        android:label="List of Job Requests"
        tools:layout="@layout/fragment_listrequest_list" />

    <fragment
        android:id="@+id/nav_listoffer"
        android:name="com.example.helpbuy.ui.listoffer.ListOfferFragment"
        android:label="List of Job Offers"
        tools:layout="@layout/fragment_listoffer_list" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.helpbuy.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />


</navigation>


