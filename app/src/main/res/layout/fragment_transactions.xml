<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transactionscontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <Button
        android:id="@+id/myoffersbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/logo"
        android:backgroundTint="@null"
        android:fontFamily="sans-serif-black"
        android:text="My Offers>"
        android:textSize="15sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/myrequestsbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/myrequestsbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/logo"
        android:backgroundTint="@null"
        android:fontFamily="sans-serif-black"
        android:text="My Requests>"
        android:textSize="15sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/myacceptedoffersbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/myacceptedoffersbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/logo"
        android:backgroundTint="@null"
        android:fontFamily="sans-serif-black"
        android:text="Offers I Accepted>"
        android:textSize="15sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/myacceptedrequestsbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/myacceptedrequestsbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:background="@color/logo"
        android:backgroundTint="@null"
        android:backgroundTintMode="add"
        android:fontFamily="sans-serif-black"
        android:text="Requests I Accepted>"
        android:textSize="15sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="257dp"
        android:layout_height="203dp"
        app:layout_constraintBottom_toTopOf="@+id/myoffersbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newapplogo" />

</androidx.constraintlayout.widget.ConstraintLayout>