<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helpbuy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/newapplogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/newapplogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelpBuy">

        <activity
            android:name=".ui.chat.MessageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HelpBuy.NoActionBar">
        </activity>

        <activity
            android:name=".NavigationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HelpBuy.NoActionBar">
        </activity>

        <activity
            android:name=".ui.transactions.TransactionActivity"
            android:screenOrientation="portrait"
            android:label="My Transactions">
        </activity>

        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.HelpBuy.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter >
        </activity>


        <activity
            android:name=".ui.chat.ChatMainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HelpBuy.NoActionBar"
            android:label="My Chats">
        </activity>

        <activity android:name=".SignUpActivity"
            android:theme="@style/Theme.HelpBuy.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data
                    android:host="helpbuycan.firebaseapp.com"
                    android:scheme="https" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>


        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HelpBuy.NoActionBar"/>
      
    </application>

</manifest>